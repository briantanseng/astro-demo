---
const team = [
  {
    name: "Sarah Mitchell",
    role: "Chief Executive Officer",
    bio: "Sarah brings over 20 years of experience in software development and business leadership.",
    image: "https://images.pexels.com/photos/5792641/pexels-photo-5792641.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    name: "Michael Chen",
    role: "Chief Technology Officer",
    bio: "Michael has led technical strategy for Fortune 500 companies and cutting-edge startups alike.",
    image: "https://images.pexels.com/photos/5792600/pexels-photo-5792600.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    name: "James Wilson",
    role: "Head of Software Architecture",
    bio: "James specializes in designing scalable, resilient systems for complex enterprise environments.",
    image: "https://images.pexels.com/photos/5682847/pexels-photo-5682847.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    name: "Elena Rodriguez",
    role: "VP of Client Success",
    bio: "Elena ensures our solutions deliver exceptional value and exceed client expectations.",
    image: "https://images.pexels.com/photos/5717641/pexels-photo-5717641.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];
---

<section id="team" class="section bg-dark">
  <div class="container">
    <h2 class="section-title text-center" data-aos="fade-up">Our Leadership Team</h2>
    <p class="section-description text-center" data-aos="fade-up" data-aos-delay="100">
      Meet the experienced professionals who lead our organization and drive our vision forward.
    </p>
    
    <div class="team-grid">
      {team.map((member, index) => (
        <div class="team-member" data-aos="fade-up" data-aos-delay={150 + (index * 50)}>
          <div class="member-image">
            <img src={member.image} alt={member.name} />
            <div class="member-social">
              <a href="#" aria-label="LinkedIn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 8C17.5913 8 19.1174 8.63214 20.2426 9.75736C21.3679 10.8826 22 12.4087 22 14V21H18V14C18 13.4696 17.7893 12.9609 17.4142 12.5858C17.0391 12.2107 16.5304 12 16 12C15.4696 12 14.9609 12.2107 14.5858 12.5858C14.2107 12.9609 14 13.4696 14 14V21H10V14C10 12.4087 10.6321 10.8826 11.7574 9.75736C12.8826 8.63214 14.4087 8 16 8Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M6 9H2V21H6V9Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M4 6C5.10457 6 6 5.10457 6 4C6 2.89543 5.10457 2 4 2C2.89543 2 2 2.89543 2 4C2 5.10457 2.89543 6 4 6Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <span class="member-role">{member.role}</span>
            <p>{member.bio}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .team-member {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: transform var(--transition-normal);
  }

  .team-member:hover {
    transform: translateY(-10px);
  }

  .member-image {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .team-member:hover .member-image img {
    transform: scale(1.05);
  }

  .member-social {
    position: absolute;
    bottom: var(--space-2);
    right: var(--space-2);
    display: flex;
    gap: var(--space-1);
  }

  .member-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: var(--color-primary-500);
    border-radius: var(--radius-full);
    transition: background-color var(--transition-fast);
  }

  .member-social a:hover {
    background-color: var(--color-primary-600);
  }

  .member-info {
    padding: var(--space-3);
  }

  .member-info h3 {
    font-size: 1.2rem;
    margin-bottom: 4px;
    color: white;
  }

  .member-role {
    display: block;
    font-size: 0.9rem;
    color: var(--color-primary-400);
    margin-bottom: var(--space-2);
  }

  .member-info p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .bg-dark .section-title::after {
    background-color: var(--color-primary-500);
  }

  .bg-dark .section-description {
    color: rgba(255, 255, 255, 0.7);
  }
</style>