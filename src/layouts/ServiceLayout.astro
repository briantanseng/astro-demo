---
import Layout from './Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
  title: string;
  description: string;
  service: {
    name: string;
    icon: string;
    intro: string;
    benefits: Array<{ title: string; description: string; }>;
    features: Array<{ title: string; description: string; }>;
  };
}

const { title, description, service } = Astro.props;

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/#services' },
  { label: service.name, href: Astro.url.pathname }
];
---

<Layout title={title} description={description}>
  <div class="service-page">
    <Breadcrumbs items={breadcrumbItems} />
    
    <header class="service-header">
      <div class="container">
        <h1>{service.name}</h1>
        <p class="service-intro">{service.intro}</p>
      </div>
    </header>

    <section class="section bg-light">
      <div class="container">
        <h2 class="section-title">Key Benefits</h2>
        <div class="benefits-grid">
          {service.benefits.map((benefit) => (
            <div class="benefit-card" data-aos="fade-up">
              <h3>{benefit.title}</h3>
              <p>{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <h2 class="section-title">Features & Capabilities</h2>
        <div class="features-grid">
          {service.features.map((feature) => (
            <div class="feature-card" data-aos="fade-up">
              <h3>{feature.title}</h3>
              <p>{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="section bg-light">
      <div class="container text-center">
        <h2 class="section-title">Ready to Get Started?</h2>
        <p class="cta-text">Contact us today to discuss how we can help transform your business.</p>
        <a href="/contact" class="btn btn-primary">Schedule a Consultation</a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .service-header {
    padding: calc(var(--space-8) * 1.5) 0 var(--space-8);
    background-color: var(--color-neutral-700);
    color: white;
  }

  .service-header h1 {
    margin-bottom: var(--space-3);
  }

  .service-intro {
    font-size: 1.25rem;
    max-width: 800px;
    opacity: 0.9;
  }

  .benefits-grid,
  .features-grid {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .benefits-grid,
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .benefit-card,
  .feature-card {
    padding: var(--space-4);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .benefit-card h3,
  .feature-card h3 {
    color: var(--color-neutral-900);
    margin-bottom: var(--space-2);
  }

  .cta-text {
    font-size: 1.2rem;
    margin-bottom: var(--space-4);
    color: var(--color-neutral-600);
  }
</style>