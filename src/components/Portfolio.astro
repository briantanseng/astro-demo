    link: "/work/erp-system"
  },
  {
    id: 2,
    title: "Healthcare Data Management Platform",
    category: "Data Solutions",
    description: "HIPAA-compliant healthcare data platform serving over 50 hospitals and medical facilities.",
    image: "https://images.pexels.com/photos/8439735/pexels-photo-8439735.jpeg",
    link: "/work/healthcare-platform"
  },
  {
    id: 3,
    title: "FinTech Payment Processing System",
    category: "Financial Technology",
    description: "Secure, high-throughput payment processing solution handling $2B in annual transactions.",
    image: "https://images.pexels.com/photos/8370752/pexels-photo-8370752.jpeg",
    link: "/work/fintech-payment"
  },
  {
    id: 4,
    title: "Logistics Management System",
    category: "Supply Chain",
    description: "Real-time tracking and logistics optimization platform for a global shipping enterprise.",
    image: "https://images.pexels.com/photos/7648080/pexels-photo-7648080.jpeg",
    link: "/work/logistics-system"
  },
  {
    id: 5,
    title: "Retail Analytics Dashboard",
    category: "Data Solutions",
    description: "AI-powered retail analytics platform providing actionable insights for inventory management and customer behavior.",
    image: "https://images.pexels.com/photos/5412270/pexels-photo-5412270.jpeg",
    link: "/work/retail-analytics"
  },
  {
    id: 6,
    title: "Cloud Migration Strategy",
    category: "Cloud Architecture",
    description: "Complete cloud migration for a legacy insurance system, reducing operational costs by 35%.",
    image: "https://images.pexels.com/photos/4348404/pexels-photo-4348404.jpeg",
    link: "/work/cloud-migration"
  },
  {
    id: 7,
    title: "Smart City IoT Platform",
    category: "IoT Solutions",
    description: "Integrated IoT platform managing smart city infrastructure including lighting, parking, and waste management.",
    image: "https://images.pexels.com/photos/1732414/pexels-photo-1732414.jpeg",
    link: "/work/smart-city"
  },
  {
    id: 8,
    title: "E-Learning Management System",
    category: "Education Technology",
    description: "Comprehensive learning platform serving over 100,000 students with personalized learning paths.",
    image: "https://images.pexels.com/photos/5905709/pexels-photo-5905709.jpeg",
    link: "/work/elearning-system"
  },
  {
    id: 9,
    title: "Supply Chain Optimization",
    category: "Supply Chain",
    description: "AI-driven supply chain optimization platform reducing inventory costs by 25% for retail clients.",
    image: "https://images.pexels.com/photos/4481259/pexels-photo-4481259.jpeg",
    link: "/work/supply-chain"
  }
];

const categories = ["All", ...new Set(projects.map(project => project.category))];
---

<section id="work" class="section bg-light">
  <div class="container">
    <h2 class="section-title text-center" data-aos="fade-up">Our Work</h2>
    <p class="section-description text-center" data-aos="fade-up" data-aos-delay="100">
      Discover how we've helped industry leaders transform their businesses through technology.
    </p>
    
    <div class="portfolio-filter" data-aos="fade-up" data-aos-delay="150">
      {categories.map((category, index) => (
        <button class={`filter-btn ${index === 0 ? 'active' : ''}`} data-category={category}>{category}</button>
      ))}
    </div>
    
    <div class="portfolio-grid">
      {projects.map((project, index) => (
        <div class="portfolio-item" data-category={project.category} data-aos="fade-up" data-aos-delay={150 + (index * 50)}>
          <div class="portfolio-image">
            <img src={project.image} alt={project.title} loading="lazy" />
            <div class="portfolio-overlay">
              <a href={project.link} class="btn btn-primary">View Details</a>
            </div>
          </div>
          <div class="portfolio-content">
            <span class="portfolio-category">{project.category}</span>
            <h3>{project.title}</h3>
            <p>{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .portfolio-filter {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .filter-btn {
    background: none;
    border: none;
    padding: var(--space-1) var(--space-2);
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-neutral-700);
    cursor: pointer;
    position: relative;
    transition: color var(--transition-fast);
  }

  .filter-btn::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-primary-500);
    transition: width var(--transition-normal);
  }

  .filter-btn:hover {
    color: var(--color-primary-600);
  }

  .filter-btn.active {
    color: var(--color-primary-500);
    font-weight: 600;
  }

  .filter-btn.active::after {
    width: 100%;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-5);
  }

  @media (min-width: 640px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .portfolio-item {
    overflow: hidden;
    border-radius: var(--radius-md);
    background-color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .portfolio-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .portfolio-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-content {
    padding: var(--space-3);
  }

  .portfolio-category {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--color-primary-500);
    margin-bottom: var(--space-1);
    font-weight: 600;
  }

  .portfolio-content h3 {
    font-size: 1.2rem;
    margin-bottom: var(--space-2);
    color: var(--color-neutral-900);
  }

  .portfolio-content p {
    font-size: 0.95rem;
    color: var(--color-neutral-600);
    margin: 0;
  }

  .portfolio-item.hidden {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active class
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Filter items
        const category = button.getAttribute('data-category');
        
        portfolioItems.forEach(item => {
          if (category === 'All' || item.getAttribute('data-category') === category) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });
  });
</script>