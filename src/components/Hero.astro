<section class="hero-section">
  <div class="hero-content">
    <div class="container">
      <div class="hero-text" data-aos="fade-up" data-aos-delay="200">
        <h1>Enterprise Solutions <br> <span class="text-primary">That Drive Innovation</span></h1>
        <p class="hero-subtitle">We craft software that transforms businesses, streamlines operations, and accelerates growth. Experience the future of enterprise technology.</p>
        <div class="hero-buttons">
          <a href="#services" class="btn btn-primary">Our Services</a>
          <a href="#contact" class="btn btn-outlined">Schedule a Consultation</a>
        </div>
      </div>
    </div>
  </div>
  <div class="hero-bg">
    <div class="shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </div>
  <div class="scroll-indicator">
    <span>Scroll</span>
    <svg width="16" height="24" viewBox="0 0 16 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M8 0V20M8 20L1 13M8 20L15 13" stroke="white" stroke-width="2"/>
    </svg>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 700px;
    width: 100%;
    color: white;
    background-color: var(--color-neutral-900);
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .hero-text {
    max-width: 700px;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-2);
    margin-top: var(--space-4);
    flex-wrap: wrap;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shapes {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }

  .shape-1 {
    top: -10%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-700));
    animation: float 30s infinite alternate ease-in-out;
  }

  .shape-2 {
    bottom: -15%;
    left: -10%;
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, var(--color-primary-400), var(--color-primary-600));
    animation: float 25s infinite alternate-reverse ease-in-out;
  }

  .shape-3 {
    top: 40%;
    left: 60%;
    width: 300px;
    height: 300px;
    background: var(--color-primary-500);
    animation: float 20s infinite alternate ease-in-out;
  }

  .scroll-indicator {
    position: absolute;
    bottom: var(--space-4);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
    opacity: 0.7;
    animation: bounce 2s infinite;
    cursor: pointer;
  }

  .scroll-indicator span {
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    100% {
      transform: translate(50px, 50px) rotate(10deg);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-10px) translateX(-50%);
    }
    60% {
      transform: translateY(-5px) translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      text-align: center;
      padding-top: var(--space-6);
    }

    .hero-text {
      margin: 0 auto;
    }

    .hero-buttons {
      justify-content: center;
    }
  }
</style>